{
  "requires": [{
    "type": "conda",
    "name": "ffmpeg",
    "args": "-c conda-forge"
  }],
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "git clone https://github.com/cocktailpeanutlabs/generative-models"
    }
  }, {
    "method": "fs.copy",
    "params": {
      "src": "app.py",
      "dest": "generative-models/app.py"
    }
  }, {
    "method": "fs.download",
    "params": {
      "uri": "https://huggingface.co/stabilityai/stable-video-diffusion-img2vid/resolve/main/svd.safetensors",
      "dir": "generative-models/checkpoints"
    }
  }, {
    "method": "shell.run",
    "params": {
      "venv": "venv",
      "message": [
        "pip install gradio huggingface_hub",
        "pip install -r requirements/pt2-{{platform}}.txt",
        "pip install -e ."
      ],
      "path": "generative-models"
    }
  }, {
    "method": "input",
    "params": { "title": "Install Success", "description": "Go back to the dashboard and launch the app!" }
  }, {
    "method": "browser.open",
    "params": { "uri": "/?selected=Stable Video Diffusion" }
  }]
}
