{
  "requires": [{
    "type": "conda",
    "name": "ffmpeg",
    "args": "-c conda-forge"
  }],
  "run": [{
    "method": "shell.run",
    "params": {
      "message": "git clone https://github.com/cocktailpeanut/generative-models"
    }
  }, {
    "method": "fs.download",
    "params": {
      "uri": "https://huggingface.co/stabilityai/stable-video-diffusion-img2vid/resolve/main/svd.safetensors",
      "dir": "generative-models/checkpoints"
    }
  }, {
    "method": "shell.run",
    "params": {
      "venv": "venv",
      "message": [
        "pip install -r requirements/{{platform === 'darwin' ? 'ptdarwin.txt' : 'pt13.txt'}}",
        "pip install -e ."
      ],
      "path": "generative-models"
    }
  }, {
    "method": "input",
    "params": { "title": "Install Success", "description": "Go back to the dashboard and launch the app!" }
  }, {
    "method": "browser.open",
    "params": { "uri": "/?selected=SVD" }
  }]
}
